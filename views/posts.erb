<% if current_user == @user %>
	

	<h1>Welcome <%= @user.fname %></h1>

<% end %>


<br><br>

<form method="POST" action="/Posts" class="contact_form" name="contact_form">   
	<label for="title">Title</label>   
	<input type="string" name="title" placeholder="My Awesome Post"> <br><br><br><br> 
	<label for="body">Comments</label> 
	<textarea type="text" name="body" rows="5" cols="30" placeholder="Enter your post here"></textarea>
	<button class="submit" type="submit">Submit Post</button> 
</form>


<% @posts.each do |t| %>
	<div id="posts">
<hr>
		<h3><%= t.title %></h3>
		<p><%= t.body %></p>
	</div>
<% end %>
